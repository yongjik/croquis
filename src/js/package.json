{
    "name": "croquis-js",
    "version": "0.2.0",
    "description": "Croquis - the js part",
    "main": "lib/index.js",
    "author": "Yongjik Kim",
    "license": "MIT",
    "style": "style/croquis_fe.css",
    "scripts": {
        "build": "npm run build:lib && npm run build:labextension:dev",
        "build:prod": "npm run clean && npm run build:lib:prod && npm run build:labextension",
        "build:labextension": "jupyter labextension build .",
        "build:labextension:dev": "jupyter labextension build --development True .",
        "build:lib": "tsc --sourceMap",
        "build:lib:prod": "tsc",
        "clean": "npm run clean:lib && npm run clean:labextension && npm run clean:lintcache",
        "clean:lib": "rimraf lib tsconfig.tsbuildinfo",
        "clean:lintcache": "rimraf .eslintcache",
        "clean:labextension": "rimraf ../croquis/labextension",
        "eslint": "eslint . --cache"
    },
    "dependencies": {
        "@jupyterlab/application": "^4.4.4",
        "@jupyterlab/notebook": "^4.4.4",
        "@jupyterlab/rendermime": "^4.4.4",
        "@jupyterlab/rendermime-interfaces": "^3.12.4",
        "@lumino/coreutils": "^2.2.1",
        "@lumino/widgets": "^2.7.1"
    },
    "NOTE": [
        "As of Jun 2025, typescript 5.6+ triggers build error on vscode-jsonrpc; ",
        "See: https://github.com/microsoft/vscode-languageserver-node/issues/1590"
    ],
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@jupyterlab/builder": "^4.4.4",
        "eslint": "^9.30.1",
        "globals": "^16.3.0",
        "rimraf": "^6.0.1",
        "typescript": "~5.5",
        "typescript-eslint": "^8.35.1"
    },
    "jupyterlab": {
        "extension": true,
        "outputDir": "../croquis/labextension"
    }
}
